<UserControl
    x:Class="ChessMaster.Views.CompetitionPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ChessMaster.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:CompetitionPageViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:HomePageViewModel />
    </Design.DataContext>

    <Grid
        Margin="4"
        ColumnDefinitions="*,*,*"
        RowDefinitions="Auto,Auto,Auto"
        ShowGridLines="True">
        <TextBlock Grid.Column="0">ID</TextBlock>
        <TextBlock Grid.Column="1">Nom</TextBlock>
        <TextBlock Grid.Column="2">joueur</TextBlock>
        <TextBox
            Grid.Row="1"
            Grid.Column="0"
            Width="200"
            HorizontalAlignment="Center"
            Text="{Binding ID}"
            Watermark="input" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            HorizontalAlignment="Center"
            Text="{Binding Name}"
            Watermark="input" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Height="25"
            HorizontalAlignment="Stretch"
            Command="{Binding SearchCommand}"
            FontSize="10">
            Search
        </Button>
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="200"
            HorizontalAlignment="Center"
            Text="{Binding Player}"
            Watermark="input" />
    </Grid>

</UserControl>
