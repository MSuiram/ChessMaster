<UserControl
    x:Class="ChessMaster.Views.CompetitionPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ChessMaster.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:CompetitionPageViewModel"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:CompetitionPageViewModel />
    </UserControl.DataContext>

    <Grid
        Margin="4"
        ColumnDefinitions="*,*,*"
        RowDefinitions="Auto,Auto,Auto,*">
        <TextBlock Grid.Column="0">ID</TextBlock>
        <TextBlock Grid.Column="1">Nom</TextBlock>
        <TextBlock Grid.Column="2">joueur</TextBlock>
        <TextBox
            Grid.Row="1"
            Grid.Column="0"
            Width="200"
            Height="30"
            HorizontalAlignment="Center"
            Text="{Binding ID}"
            Watermark="input" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="30"
            HorizontalAlignment="Center"
            Text="{Binding Name}"
            Watermark="input" />
        <Border
            Grid.Row="2"
            Grid.Column="1"
            Padding="5">
            <Button
                HorizontalAlignment="Stretch"
                Command="{Binding SearchCommand}"
                FontSize="10">
                Search
            </Button>
        </Border>
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="200"
            Height="30"
            HorizontalAlignment="Center"
            Text="{Binding Winner}"
            Watermark="input" />
        <Border
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Padding="20"
            Background="Brown"
            CornerRadius="40">
            <ScrollViewer
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="3">
                <ItemsControl ItemsSource="{Binding CompetitionItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="vm:CompetitionItemViewModel">
                            <Button HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <Label Width="100" Content="{Binding ID}" />
                                    <Label Width="100" Content="{Binding Name}" />
                                    <Label Width="100" Content="{Binding Winner}" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>

</UserControl>
