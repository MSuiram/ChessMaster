<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ChessMaster.App"
             xmlns:local="using:ChessMaster"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://ChessMaster/Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackGround" Color="#EE6983"></SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryActiveBackGround" Color="#6633dd"></SolidColorBrush>
    </Application.Resources>
</Application>