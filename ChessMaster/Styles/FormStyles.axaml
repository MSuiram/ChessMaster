<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    

    <Style Selector="Button.Form">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Background" Value="{DynamicResource ResourceKey=PrimaryBackGround}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="TextBlock.TextAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.Form:pointerover /template/ ContentPresenter">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Background" Value="#efb169" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.Form.active /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryActiveBackGround}" />
    </Style>

    <Style Selector="Button.Form:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#144039" />
    </Style>

</Styles>